<?xml version="1.0" encoding="UTF-8"?>
  <odoo>
    <data>
      <!-- view form to res_partner_bank -->
      <record id="view_res_partner_bank_form_inherit" model="ir.ui.view">
        <field name="name">res_partner_bank_form_inherit</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
          <xpath expr="/form/sheet/group" position="replace">
            <sheet>
              <div class="oe_title">
                  <separator string="Cuenta Bancaria" />
              </div>
              <div>
                <group col="2">
                  <field name="bank_id" placeholder="Seleccione" style="width:65%"/>
                </group>
                <group col="4" >
                  <field name="acc_number" />
                  <field name="acc_type" string="Tipo de cuenta" placeholder="Seleccione"/>
                </group>
              </div>
            </sheet>
          </xpath>
        </field>
      </record>
      <!-- view tree to res_bank -->
      <record id="view_res_partner_bank_tree_inherit" model="ir.ui.view">
        <field name="name">res_partner_tree_inherit</field>
        <field name="model">res.partner.bank</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
          <tree string="Cuentas bancarias">
            <field name="bank_id" />
            <field name="acc_number"/>
            <field name="acc_type" string="Tipo de cuenta" />
          </tree>
        </field>
      </record>
    </data>
  </odoo>
